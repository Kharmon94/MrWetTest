<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <h1 class="text-gradient h3 mb-3 mb-sm-0">Payment History</h1>
        <%= link_to "Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
      </div>

      <% if @payments.any? %>
        <div class="card" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0" style="color: var(--text-primary);">
                <thead style="background: var(--bg-tertiary); color: var(--text-primary);">
                  <tr>
                    <th>Item</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @payments.each do |payment| %>
                    <tr style="color: var(--text-primary); border-color: var(--border-primary);">
                      <td style="color: var(--text-primary);">
                        <div class="d-flex align-items-center">
                          <div class="me-3">
                            <% if payment.payable.is_a?(Course) %>
                              <div class="bg-primary bg-opacity-10 rounded p-2">
                                <i class="fas fa-graduation-cap text-primary"></i>
                              </div>
                            <% elsif payment.payable.is_a?(Test) %>
                              <div class="bg-success bg-opacity-10 rounded p-2">
                                <i class="fas fa-clipboard-check text-success"></i>
                              </div>
                            <% end %>
                          </div>
                          <div>
                            <h6 class="mb-0"><%= payment.payable&.title || "Unknown Item" %></h6>
                            <small style="color: var(--text-muted);"><%= payment.payable_type_display %></small>
                          </div>
                        </div>
                      </td>
                      <td style="color: var(--text-primary);">
                        <span class="fw-semibold"><%= payment.formatted_amount %></span>
                      </td>
                      <td style="color: var(--text-primary);">
                        <% case payment.status %>
                        <% when 'succeeded' %>
                          <span class="badge bg-success">Completed</span>
                        <% when 'pending' %>
                          <span class="badge bg-warning">Pending</span>
                        <% when 'failed' %>
                          <span class="badge bg-danger">Failed</span>
                        <% when 'canceled' %>
                          <span class="badge bg-secondary">Canceled</span>
                        <% when 'requires_action' %>
                          <span class="badge bg-info">Action Required</span>
                        <% else %>
                          <span class="badge bg-light text-dark"><%= payment.status.titleize %></span>
                        <% end %>
                      </td>
                      <td style="color: var(--text-primary);">
                        <span style="color: var(--text-muted);"><%= l payment.created_at, format: :short %></span>
                      </td>
                      <td style="color: var(--text-primary);">
                        <%= link_to "View", payment_path(payment), class: "btn btn-sm btn-outline-primary" %>
                        <% if payment.successful? && payment.payable.present? %>
                          <%= link_to "Access", payment.payable, class: "btn btn-sm btn-success" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Pagination will be added when needed -->
      <% else %>
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-credit-card" style="font-size: 4rem; color: var(--text-muted);"></i>
          </div>
          <h4 style="color: var(--text-muted); margin-bottom: 1rem;">No Payments Yet</h4>
          <p style="color: var(--text-muted); margin-bottom: 1.5rem;">You haven't made any payments yet. Browse our courses and tests to get started!</p>
        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center align-items-center">
          <%= link_to "Browse Courses", courses_path, class: "btn btn-primary w-100 w-sm-auto" %>
          <% if user_signed_in? %>
            <%= link_to "My Progress", tests_test_attempts_path, class: "btn btn-outline-primary w-100 w-sm-auto" %>
          <% end %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
