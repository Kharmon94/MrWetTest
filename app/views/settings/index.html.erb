<div class="container py-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Page Header -->
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <h1 class="text-gradient h2 mb-3 mb-sm-0">Settings & Preferences</h1>
        <%= link_to "â† Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
      </div>

      <!-- Settings Navigation -->
      <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-body p-4">
          <div class="row g-3">
            <div class="col-md-6 col-lg-3">
              <%= link_to settings_profile_path, class: "text-decoration-none" do %>
                <div class="settings-card h-100 p-4 text-center rounded-3" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary); transition: all 0.3s ease;">
                  <div class="mb-3">
                    <i class="fas fa-user-circle" style="font-size: 2.5rem; color: var(--accent-500);"></i>
                  </div>
                  <h5 class="fw-semibold mb-2" style="color: var(--text-primary);">Profile</h5>
                  <p class="small mb-0" style="color: var(--text-secondary);">Manage your personal information and avatar</p>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 col-lg-3">
              <%= link_to settings_preferences_path, class: "text-decoration-none" do %>
                <div class="settings-card h-100 p-4 text-center rounded-3" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary); transition: all 0.3s ease;">
                  <div class="mb-3">
                    <i class="fas fa-palette" style="font-size: 2.5rem; color: var(--accent-500);"></i>
                  </div>
                  <h5 class="fw-semibold mb-2" style="color: var(--text-primary);">Preferences</h5>
                  <p class="small mb-0" style="color: var(--text-secondary);">Theme, language, and display settings</p>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 col-lg-3">
              <%= link_to settings_security_path, class: "text-decoration-none" do %>
                <div class="settings-card h-100 p-4 text-center rounded-3" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary); transition: all 0.3s ease;">
                  <div class="mb-3">
                    <i class="fas fa-shield-alt" style="font-size: 2.5rem; color: var(--accent-500);"></i>
                  </div>
                  <h5 class="fw-semibold mb-2" style="color: var(--text-primary);">Security</h5>
                  <p class="small mb-0" style="color: var(--text-secondary);">Password and account security</p>
                </div>
              <% end %>
            </div>

            <div class="col-md-6 col-lg-3">
              <%= link_to settings_notifications_path, class: "text-decoration-none" do %>
                <div class="settings-card h-100 p-4 text-center rounded-3" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary); transition: all 0.3s ease;">
                  <div class="mb-3">
                    <i class="fas fa-bell" style="font-size: 2.5rem; color: var(--accent-500);"></i>
                  </div>
                  <h5 class="fw-semibold mb-2" style="color: var(--text-primary);">Notifications</h5>
                  <p class="small mb-0" style="color: var(--text-secondary);">Email and push notification preferences</p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Account Information Card -->
      <div class="card" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
          <h5 class="mb-0" style="color: var(--text-primary);">
            <i class="fas fa-info-circle me-2"></i>Account Information
          </h5>
        </div>
        <div class="card-body" style="color: var(--text-primary);">
          <div class="row g-4">
            <div class="col-md-6">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <i class="fas fa-envelope text-primary"></i>
                  </div>
                </div>
                <div>
                  <h6 class="mb-1" style="color: var(--text-primary);">Email Address</h6>
                  <p class="mb-0 small" style="color: var(--text-secondary);"><%= @user.email %></p>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <i class="fas fa-calendar-alt text-success"></i>
                  </div>
                </div>
                <div>
                  <h6 class="mb-1" style="color: var(--text-primary);">Member Since</h6>
                  <p class="mb-0 small" style="color: var(--text-secondary);"><%= @user.created_at.strftime("%B %d, %Y") %></p>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <i class="fas fa-graduation-cap text-info"></i>
                  </div>
                </div>
                <div>
                  <h6 class="mb-1" style="color: var(--text-primary);">Role</h6>
                  <p class="mb-0 small" style="color: var(--text-secondary);">
                    <% if @user.has_role?(:admin) %>
                      <span class="badge bg-danger">Administrator</span>
                    <% else %>
                      <span class="badge bg-secondary">User</span>
                    <% end %>
                  </p>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <i class="fas fa-credit-card text-warning"></i>
                  </div>
                </div>
                <div>
                  <h6 class="mb-1" style="color: var(--text-primary);">Total Payments</h6>
                  <p class="mb-0 small" style="color: var(--text-secondary);"><%= @user.payments.successful.count %> successful</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card mt-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
          <h5 class="mb-0" style="color: var(--text-primary);">
            <i class="fas fa-bolt me-2"></i>Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-12 col-sm-6">
              <%= link_to payments_path, class: "btn btn-outline-primary w-100" do %>
                <i class="fas fa-credit-card me-2"></i>View Payment History
              <% end %>
            </div>
            <div class="col-12 col-sm-6">
              <%= link_to settings_account_path, class: "btn btn-outline-secondary w-100" do %>
                <i class="fas fa-cog me-2"></i>Account Management
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.settings-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
}
</style>
