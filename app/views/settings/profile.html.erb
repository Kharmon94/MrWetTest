<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Page Header -->
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <h1 class="text-gradient h2 mb-3 mb-sm-0">Profile Settings</h1>
        <%= link_to "← Back to Settings", settings_root_path, class: "btn btn-outline-secondary" %>
      </div>

      <%= form_with model: @user, url: settings_profile_path, method: :patch, local: true, class: "needs-validation", novalidate: true do |form| %>
        <div class="card" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
            <h5 class="mb-0" style="color: var(--text-primary);">
              <i class="fas fa-user me-2"></i>Personal Information
            </h5>
          </div>
          <div class="card-body p-4">
            <!-- Profile Picture Section -->
            <div class="row mb-4">
              <div class="col-md-4">
                <div class="text-center">
                  <div class="mb-3">
                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto" 
                         style="width: 120px; height: 120px; background: var(--bg-tertiary) !important; border: 1px solid var(--border-primary);">
                      <% if @user.avatar.attached? %>
                        <%= image_tag @user.avatar.variant(resize_to_limit: [120, 120]), 
                            class: "rounded-circle", 
                            style: "width: 120px; height: 120px; object-fit: cover;" %>
                      <% else %>
                        <i class="fas fa-user" style="font-size: 3rem; color: var(--text-muted);"></i>
                      <% end %>
                    </div>
                  </div>
                  <%= form.file_field :avatar, class: "form-control form-control-sm", 
                      style: "background: var(--bg-primary); border: 1px solid var(--border-primary); color: var(--text-primary);" %>
                  <small class="form-text" style="color: var(--text-muted);">JPG, PNG up to 2MB</small>
                </div>
              </div>
              <div class="col-md-8">
                <h6 style="color: var(--text-primary);">Profile Picture</h6>
                <p style="color: var(--text-secondary);">Upload a profile picture to personalize your account. Recommended size is 400x400 pixels.</p>
              </div>
            </div>

            <div class="row g-3">
              <!-- Email Field -->
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :email, "Email Address", class: "form-label", style: "color: var(--text-primary);" %>
                  <%= form.email_field :email, 
                      class: "form-control #{'is-invalid' if @user.errors[:email].any?}",
                      style: "background: var(--bg-primary); border: 1px solid var(--border-primary); color: var(--text-primary);",
                      required: true %>
                  <% if @user.errors[:email].any? %>
                    <div class="invalid-feedback">
                      <%= @user.errors[:email].first %>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- First Name Field -->
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :first_name, "First Name", class: "form-label", style: "color: var(--text-primary);" %>
                  <%= form.text_field :first_name, 
                      class: "form-control #{'is-invalid' if @user.errors[:first_name].any?}",
                      style: "background: var(--bg-primary); border: 1px solid var(--border-primary); color: var(--text-primary);" %>
                  <% if @user.errors[:first_name].any? %>
                    <div class="invalid-feedback">
                      <%= @user.errors[:first_name].first %>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Last Name Field -->
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :last_name, "Last Name", class: "form-label", style: "color: var(--text-primary);" %>
                  <%= form.text_field :last_name, 
                      class: "form-control #{'is-invalid' if @user.errors[:last_name].any?}",
                      style: "background: var(--bg-primary); border: 1px solid var(--border-primary); color: var(--text-primary);" %>
                  <% if @user.errors[:last_name].any? %>
                    <div class="invalid-feedback">
                      <%= @user.errors[:last_name].first %>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Bio Field -->
              <div class="col-12">
                <div class="mb-3">
                  <%= form.label :bio, "Bio", class: "form-label", style: "color: var(--text-primary);" %>
                  <%= form.text_area :bio, 
                      rows: 4,
                      class: "form-control #{'is-invalid' if @user.errors[:bio].any?}",
                      style: "background: var(--bg-primary); border: 1px solid var(--border-primary); color: var(--text-primary);",
                      placeholder: "Tell us about yourself..." %>
                  <% if @user.errors[:bio].any? %>
                    <div class="invalid-feedback">
                      <%= @user.errors[:bio].first %>
                    </div>
                  <% end %>
                  <small class="form-text" style="color: var(--text-muted);">Maximum 500 characters</small>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Account Statistics -->
        <div class="card mt-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
            <h5 class="mb-0" style="color: var(--text-primary);">
              <i class="fas fa-chart-bar me-2"></i>Account Statistics
            </h5>
          </div>
          <div class="card-body" style="color: var(--text-primary);">
            <div class="row g-3">
              <div class="col-md-3">
                <div class="text-center">
                  <div class="h4 mb-1 text-primary"><%= @user.purchased_courses.count %></div>
                  <small style="color: var(--text-secondary);">Enrolled Courses</small>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center">
                  <div class="h4 mb-1 text-success"><%= @user.test_attempts.count %></div>
                  <small style="color: var(--text-secondary);">Test Attempts</small>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center">
                  <div class="h4 mb-1 text-info"><%= @user.payments.successful.count %></div>
                  <small style="color: var(--text-secondary);">Successful Payments</small>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center">
                  <div class="h4 mb-1 text-warning">
                    <%= (@user.created_at..Time.current).count / 1.day %> days
                  </div>
                  <small style="color: var(--text-secondary);">Member Duration</small>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="card mt-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-body p-4">
            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-between">
              <%= link_to "Cancel", settings_root_path, class: "btn btn-outline-secondary order-2 order-sm-1" %>
              <%= form.submit "Save Changes", class: "btn btn-primary order-1 order-sm-2" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
