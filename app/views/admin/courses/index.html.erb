<% content_for :title, "Manage Courses - Admin Panel" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-primary">
            <i class="fas fa-book me-2"></i>
            Manage Courses
          </h1>
          <p class="text-muted mb-0">Course management and enrollment analytics</p>
        </div>
        <div>
          <%= link_to new_admin_course_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i> New Course
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Total Courses
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_courses %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-book fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Free Courses
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @free_courses %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-gift fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Paid Courses
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @paid_courses %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Total Revenue
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">$<%= sprintf('%.2f', @total_revenue) %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-chart-line fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <%= form_with url: admin_courses_path, method: :get, local: true, class: "row g-3" do |form| %>
        <div class="col-md-4">
          <%= form.text_field :search, placeholder: "Search courses...", value: params[:search], class: "form-control" %>
        </div>
        <div class="col-md-3">
          <%= form.select :price_filter, options_for_select([
            ["All Courses", ""],
            ["Free Courses", "free"],
            ["Paid Courses", "paid"]
          ], params[:price_filter]), {}, { class: "form-select" } %>
        </div>
        <div class="col-md-3">
          <%= form.submit "Filter", class: "btn btn-primary" %>
          <%= link_to "Clear", admin_courses_path, class: "btn btn-outline-secondary ms-2" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Courses Table -->
  <div class="card shadow">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="fas fa-list me-2"></i>
        Courses List
      </h6>
    </div>
    <div class="card-body">
      <% if @courses.any? %>
        <div class="table-responsive">
          <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Course</th>
                <th>Price</th>
                <th>Lessons</th>
                <th>Enrollments</th>
                <th>Revenue</th>
                <th>Settings</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @courses.each do |course| %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <% if course.thumbnail.attached? %>
                        <%= image_tag course.thumbnail, class: "course-thumbnail me-3", alt: course.title %>
                      <% else %>
                        <div class="course-thumbnail-placeholder me-3">
                          <i class="fas fa-book text-muted"></i>
                        </div>
                      <% end %>
                      <div>
                        <div class="font-weight-bold"><%= course.title %></div>
                        <small class="text-muted"><%= truncate(course.description, length: 60) %></small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="font-weight-bold <%= course.free? ? 'text-success' : 'text-info' %>">
                      <%= course.formatted_price %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-secondary"><%= course.lessons.count %></span>
                  </td>
                  <td>
                    <% enrollments = course.payments.where(status: 'succeeded').count %>
                    <% if enrollments > 0 %>
                      <span class="badge bg-primary"><%= enrollments %></span>
                    <% else %>
                      <span class="text-muted">0</span>
                    <% end %>
                  </td>
                  <td>
                    <% revenue = course.payments.where(status: 'succeeded').sum(:amount) %>
                    <% if revenue > 0 %>
                      <span class="text-success font-weight-bold">
                        $<%= sprintf('%.2f', revenue) %>
                      </span>
                    <% else %>
                      <span class="text-muted">$0.00</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="d-flex flex-column gap-1">
                      <% if course.time_managed? %>
                        <span class="badge bg-info badge-sm">Time Managed</span>
                      <% end %>
                      <% if course.requires_chapter_assessments? %>
                        <span class="badge bg-warning badge-sm">Chapter Assessments</span>
                      <% end %>
                    </div>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= course.created_at.strftime("%m/%d/%Y") %>
                    </small>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to admin_course_path(course), class: "btn btn-outline-primary btn-sm", title: "View Details" do %>
                        <i class="fas fa-eye"></i>
                      <% end %>
                      <%= link_to edit_admin_course_path(course), class: "btn btn-outline-info btn-sm", title: "Edit Course" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                      <%= link_to admin_course_path(course), method: :delete, 
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this course?" }, 
                          class: "btn btn-outline-danger btn-sm", title: "Delete Course" do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <% if defined?(Kaminari) && @courses.respond_to?(:total_pages) && @courses.total_pages > 1 %>
          <div class="d-flex justify-content-center mt-4">
            <%= paginate @courses %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-book fa-4x text-muted mb-3"></i>
          <h5 class="text-muted">No courses found</h5>
          <p class="text-muted">
            <% if params[:search].present? || params[:price_filter].present? %>
              Try adjusting your search criteria.
            <% else %>
              <%= link_to "Create the first course", new_admin_course_path, class: "btn btn-primary mt-2" %>
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
  border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
  border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}

.text-gray-800 {
  color: #5a5c69 !important;
}

.text-gray-300 {
  color: #dddfeb !important;
}

.font-weight-bold {
  font-weight: 700 !important;
}

.text-xs {
  font-size: 0.7rem;
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.table th {
  background-color: #f8f9fc;
  border-color: #e3e6f0;
  color: #5a5c69;
  font-weight: 600;
}

.table td {
  border-color: #e3e6f0;
  vertical-align: middle;
}

.course-thumbnail {
  width: 40px;
  height: 40px;
  object-fit: cover;
  border-radius: 0.25rem;
}

.course-thumbnail-placeholder {
  width: 40px;
  height: 40px;
  background-color: #f8f9fc;
  border: 1px solid #e3e6f0;
  border-radius: 0.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
}

.badge-sm {
  font-size: 0.65rem;
  padding: 0.25rem 0.4rem;
}

.btn-group .btn {
  border-radius: 0;
}

.btn-group .btn:first-child {
  border-top-left-radius: 0.35rem;
  border-bottom-left-radius: 0.35rem;
}

.btn-group .btn:last-child {
  border-top-right-radius: 0.35rem;
  border-bottom-right-radius: 0.35rem;
}
</style>
