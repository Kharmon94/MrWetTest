<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Questions Management</h1>
    <%= link_to new_admin_question_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>Create New Question
    <% end %>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Question Content</th>
              <th>Test</th>
              <th>Correct Answer</th>
              <th>Created</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @questions.each do |question| %>
              <tr>
                <td><%= question.id %></td>
                <td>
                  <div class="text-truncate" style="max-width: 300px;" title="<%= question.content %>">
                    <%= truncate(question.content, length: 100) %>
                  </div>
                </td>
                <td>
                  <%= link_to question.test.title, admin_test_path(question.test), class: "text-decoration-none" %>
                </td>
                <td>
                  <div class="text-truncate" style="max-width: 150px;" title="<%= question.correct_answer %>">
                    <%= truncate(question.correct_answer, length: 30) %>
                  </div>
                </td>
                <td>
                  <small class="text-muted">
                    <%= question.created_at.strftime("%m/%d/%Y") %>
                  </small>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <%= link_to admin_question_path(question), class: "btn btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_admin_question_path(question), class: "btn btn-outline-secondary" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to admin_question_path(question), method: :delete, 
                        class: "btn btn-outline-danger",
                        data: { confirm: "Are you sure you want to delete this question?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if defined?(Kaminari) && @questions.respond_to?(:current_page) %>
    <div class="d-flex justify-content-center mt-4">
      <%= paginate @questions %>
    </div>
  <% end %>
</div>
