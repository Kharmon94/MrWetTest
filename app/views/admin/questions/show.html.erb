<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Question Details</h1>
    <div class="btn-group">
      <%= link_to edit_admin_question_path(@question), class: "btn btn-primary" do %>
        <i class="fas fa-edit me-2"></i>Edit Question
      <% end %>
      <%= link_to admin_questions_path, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-arrow-left me-2"></i>Back to Questions
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Question Information</h5>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Question ID:</strong>
            </div>
            <div class="col-sm-9">
              <%= @question.id %>
            </div>
          </div>


          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Test:</strong>
            </div>
            <div class="col-sm-9">
              <%= link_to @question.test.title, admin_test_path(@question.test), class: "text-decoration-none" %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Question Content:</strong>
            </div>
            <div class="col-sm-9">
              <div class="p-3 bg-light rounded">
                <%= simple_format(@question.content) %>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Multiple Choice Options:</strong>
            </div>
            <div class="col-sm-9">
              <div class="p-3 bg-light rounded">
                <% @question.multiple_choice_options.each_with_index do |option, index| %>
                  <div class="mb-2">
                    <span class="badge bg-secondary me-2"><%= ('A'.ord + index).chr %></span>
                    <%= option %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Correct Answer:</strong>
            </div>
            <div class="col-sm-9">
              <div class="p-3 bg-success bg-opacity-10 border border-success rounded">
                <strong class="text-success"><%= @question.correct_answer %></strong>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Created:</strong>
            </div>
            <div class="col-sm-9">
              <%= @question.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Last Updated:</strong>
            </div>
            <div class="col-sm-9">
              <%= @question.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Question Statistics</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Total Attempts:</strong>
            <span class="badge bg-primary ms-2">
              <%= @question.test_attempt_questions.count %>
            </span>
          </div>

          <div class="mb-3">
            <strong>Difficulty Level:</strong>
            <span class="badge bg-warning ms-2">
              <%= @question.difficulty_level %>
            </span>
          </div>

          <div class="mb-3">
            <strong>Number of Options:</strong>
            <span class="badge bg-info ms-2">
              <%= @question.multiple_choice_options.count %>
            </span>
          </div>
        </div>
      </div>

      <div class="card mt-3">
        <div class="card-header">
          <h5 class="mb-0">Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to edit_admin_question_path(@question), class: "btn btn-primary" do %>
              <i class="fas fa-edit me-2"></i>Edit Question
            <% end %>
            
            <%= link_to admin_question_path(@question), method: :delete, 
                class: "btn btn-danger",
                data: { confirm: "Are you sure you want to delete this question? This action cannot be undone." } do %>
              <i class="fas fa-trash me-2"></i>Delete Question
            <% end %>
            
            <%= link_to admin_test_path(@question.test), class: "btn btn-outline-secondary" do %>
              <i class="fas fa-eye me-2"></i>View Test
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
