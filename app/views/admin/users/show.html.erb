<% content_for :title, "User Details - #{@user.email}" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <%= link_to admin_users_path, class: "btn btn-outline-secondary me-3" do %>
            <i class="fas fa-arrow-left"></i>
          <% end %>
          <div>
            <h1 class="h3 mb-1 text-primary">
              <i class="fas fa-user me-2"></i>
              User Details
            </h1>
            <p class="text-muted mb-0"><%= @user.email %></p>
          </div>
        </div>
        <div class="d-flex gap-2">
          <%= link_to edit_admin_user_path(@user), class: "btn btn-primary" do %>
            <i class="fas fa-edit me-1"></i> Edit User
          <% end %>
          <%= link_to admin_user_path(@user, method: :delete), 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user?" }, 
              class: "btn btn-danger" do %>
            <i class="fas fa-trash me-1"></i> Delete User
          <% end unless @user == current_user %>
        </div>
      </div>
    </div>
  </div>

  <!-- User Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Test Attempts
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_attempts %></div>
              <div class="text-xs text-muted">
                <%= @passed_attempts %> passed
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-clipboard-check fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Average Score
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @average_score %>%</div>
              <div class="text-xs text-muted">
                Across all tests
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-percentage fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Total Spent
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">$<%= sprintf('%.2f', @total_spent) %></div>
              <div class="text-xs text-muted">
                Course & test purchases
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Member Since
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @user.created_at.strftime("%b %Y") %>
              </div>
              <div class="text-xs text-muted">
                <%= @user.created_at.strftime("%m/%d/%Y") %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Row -->
  <div class="row">
    <!-- User Information -->
    <div class="col-lg-4">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-user-circle me-2"></i>
            User Information
          </h6>
        </div>
        <div class="card-body">
          <div class="text-center mb-3">
            <div class="avatar-lg bg-<%= @user.has_role?(:admin) ? 'danger' : @user.has_role?(:instructor) ? 'info' : 'secondary' %> text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2">
              <%= @user.email.first.upcase %>
            </div>
            <h6 class="mb-1"><%= @user.email %></h6>
            <div class="mb-2">
              <% @user.roles.each do |role| %>
                <span class="badge bg-<%= role.name == 'admin' ? 'danger' : role.name == 'instructor' ? 'info' : 'success' %> me-1">
                  <%= role.name.humanize %>
                </span>
              <% end %>
            </div>
          </div>
          
          <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between">
              <span>Email:</span>
              <small><%= @user.email %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>User ID:</span>
              <small><%= @user.id %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Member Since:</span>
              <small><%= @user.created_at.strftime("%m/%d/%Y") %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Last Sign In:</span>
              <small><%= @user.current_sign_in_at&.strftime("%m/%d/%Y at %I:%M %p") || 'Never' %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Theme Preference:</span>
              <small><%= @user.theme_preference&.humanize || 'Default' %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Language:</span>
              <small><%= @user.language&.upcase || 'EN' %></small>
            </div>
          </div>

          <div class="mt-3">
            <%= link_to admin_user_path(@user), method: :patch, 
                data: { turbo_method: :patch }, 
                class: "btn btn-outline-warning btn-sm w-100" do %>
              <i class="fas fa-key me-1"></i> Send Password Reset
            <% end %>
          </div>
        </div>
      </div>

      <!-- Purchased Courses -->
      <div class="card shadow">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-book me-2"></i>
            Purchased Courses
          </h6>
        </div>
        <div class="card-body">
          <% if @purchased_courses.any? %>
            <div class="list-group list-group-flush">
              <% @purchased_courses.each do |course| %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <div class="font-weight-bold"><%= course.title %></div>
                    <small class="text-muted"><%= course.formatted_price %></small>
                  </div>
                  <span class="badge bg-success">
                    <%= course.lessons.count %> lessons
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-3">
              <i class="fas fa-book fa-2x text-muted mb-2"></i>
              <p class="text-muted mb-0">No purchased courses</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Test Attempts -->
    <div class="col-lg-8">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-clipboard-list me-2"></i>
            Recent Test Attempts
          </h6>
        </div>
        <div class="card-body">
          <% if @test_attempts.any? %>
            <div class="table-responsive">
              <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Test</th>
                    <th>Type</th>
                    <th>Score</th>
                    <th>Status</th>
                    <th>Completed</th>
                    <th>Attempt</th>
                  </tr>
                </thead>
                <tbody>
                  <% @test_attempts.each do |attempt| %>
                    <tr>
                      <td>
                        <div class="font-weight-bold"><%= attempt.test.title %></div>
                      </td>
                      <td>
                        <span class="badge bg-info"><%= attempt.test.assessment_type.humanize %></span>
                      </td>
                      <td>
                        <% if attempt.submitted? %>
                          <span class="font-weight-bold <%= attempt.passed? ? 'text-success' : 'text-danger' %>">
                            <%= attempt.score %>%
                          </span>
                        <% else %>
                          <span class="text-warning">In Progress</span>
                        <% end %>
                      </td>
                      <td>
                        <% if attempt.submitted? %>
                          <% if attempt.passed? %>
                            <span class="badge bg-success">
                              <i class="fas fa-check me-1"></i>Passed
                            </span>
                          <% else %>
                            <span class="badge bg-danger">
                              <i class="fas fa-times me-1"></i>Failed
                            </span>
                          <% end %>
                        <% else %>
                          <span class="badge bg-warning">In Progress</span>
                        <% end %>
                      </td>
                      <td>
                        <small class="text-muted">
                          <%= attempt.taken_at.strftime("%m/%d/%Y at %I:%M %p") %>
                        </small>
                      </td>
                      <td>
                        <span class="badge bg-secondary">#<%= attempt.retake_number %></span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No test attempts yet</h5>
              <p class="text-muted">This user hasn't taken any tests.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Payment History -->
      <div class="card shadow">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-credit-card me-2"></i>
            Payment History
          </h6>
        </div>
        <div class="card-body">
          <% if @payments.any? %>
            <div class="table-responsive">
              <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% @payments.each do |payment| %>
                    <tr>
                      <td>
                        <div class="font-weight-bold"><%= payment.payable_type %></div>
                        <small class="text-muted">
                          <%= payment.payable.title rescue 'Unknown Item' %>
                        </small>
                      </td>
                      <td>
                        <span class="font-weight-bold text-success">
                          <%= payment.formatted_amount %>
                        </span>
                      </td>
                      <td>
                        <span class="badge bg-<%= payment.successful? ? 'success' : payment.failed? ? 'danger' : 'warning' %>">
                          <%= payment.status.humanize %>
                        </span>
                      </td>
                      <td>
                        <small class="text-muted">
                          <%= payment.created_at.strftime("%m/%d/%Y at %I:%M %p") %>
                        </small>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No payment history</h5>
              <p class="text-muted">This user hasn't made any purchases.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
  border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
  border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}

.avatar-lg {
  width: 4rem;
  height: 4rem;
  font-size: 1.5rem;
}

.text-gray-800 {
  color: #5a5c69 !important;
}

.text-gray-300 {
  color: #dddfeb !important;
}

.font-weight-bold {
  font-weight: 700 !important;
}

.text-xs {
  font-size: 0.7rem;
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.table th {
  background-color: #f8f9fc;
  border-color: #e3e6f0;
  color: #5a5c69;
  font-weight: 600;
}

.table td {
  border-color: #e3e6f0;
  vertical-align: middle;
}

.list-group-item {
  border-left: none;
  border-right: none;
  padding: 0.75rem 0;
}

.list-group-item:first-child {
  border-top: none;
  padding-top: 0;
}

.list-group-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
</style>
