<% content_for :title, "Manage Users" %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3" style="border-bottom: 1px solid var(--border-primary);">
  <h1 class="h2" style="color: var(--text-primary);">Manage Users</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <span class="badge bg-info">Total: <%= @users.count %></span>
    </div>
  </div>
</div>

<div class="admin-card p-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary); border-radius: var(--radius-lg);">
  <% if @users.any? %>
    <div class="table-responsive">
      <table class="table table-hover" style="color: var(--text-primary);">
        <thead style="background: var(--bg-tertiary); color: var(--text-primary);">
          <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr style="color: var(--text-primary); border-color: var(--border-primary);">
              <td style="color: var(--text-primary);"><%= user.email %></td>
              <td>
                <% if user.roles.any? %>
                  <% user.roles.each do |role| %>
                    <span class="badge bg-<%= role.name == 'admin' ? 'danger' : 'secondary' %>">
                      <%= role.name.capitalize %>
                    </span>
                  <% end %>
                <% else %>
                  <span style="color: var(--text-muted);">No roles</span>
                <% end %>
              </td>
              <td style="color: var(--text-primary);"><%= user.created_at.strftime("%B %d, %Y") %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to "View", admin_user_path(user), class: "btn btn-outline-primary btn-sm" %>
                  <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to "Delete", admin_user_path(user), 
                      method: :delete, 
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                      class: "btn btn-outline-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <% if defined?(Kaminari) && @users.respond_to?(:current_page) %>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @users, theme: 'twitter-bootstrap-4' %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-5">
      <h5 style="color: var(--text-primary);">No users found</h5>
      <p style="color: var(--text-secondary);">There are no users in the system yet.</p>
    </div>
  <% end %>
</div>
