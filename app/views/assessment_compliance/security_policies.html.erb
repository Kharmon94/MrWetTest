<div class="container py-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Page Header -->
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <h1 class="text-gradient h2 mb-3 mb-sm-0">Internet Security &amp; Privacy Policies</h1>
        <%= link_to "â† Back to Assessment Procedures", 
                    procedures_test_path(@test), 
                    class: "btn btn-outline-secondary" %>
      </div>

      <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
          <h5 class="mb-0" style="color: var(--text-primary);">
            <i class="fas fa-shield-alt me-2"></i>How Your Information Is Protected
          </h5>
        </div>
        <div class="card-body p-4" style="color: var(--text-primary);">
          <div class="security-text" style="white-space: pre-line; line-height: 1.6;">
            <%= @security_policies_text %>
          </div>
        </div>
      </div>

      <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
        <%= link_to "Back to Procedures", procedures_test_path(@test), class: "btn btn-outline-secondary btn-lg px-4 px-md-5" %>
        <%= link_to "Continue to Honor Statement", honor_statement_test_path(@test), class: "btn btn-primary btn-lg px-4 px-md-5" %>
      </div>
    </div>
  </div>
</div>


