<style>
  .test-attempt-container .form-check-input {
    background-color: var(--bg-primary);
    border-color: var(--border-primary);
  }
  
  .test-attempt-container .form-check-input:checked {
    background-color: var(--accent-500);
    border-color: var(--accent-500);
  }
  
  .test-attempt-container .form-check-input:focus {
    box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
    border-color: var(--accent-500);
  }
  
  .test-attempt-container .form-check-label:hover {
    color: var(--accent-500);
  }
</style>

<div class="container py-5 test-attempt-container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Header Section -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="text-gradient h2 mb-2">Taking Assessment: <%= @test_attempt.test.title %></h1>
          <p class="text-muted mb-0" style="color: var(--text-secondary);">
            <i class="fas fa-clock me-2"></i>
            Please answer all questions carefully. Once submitted, your answers cannot be changed.
          </p>
        </div>
        <div class="text-end">
          <% if @test_attempt.test.time_limit.present? %>
            <div class="alert alert-info mb-0" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary); color: var(--text-primary);">
              <i class="fas fa-stopwatch me-2"></i>
              <span id="time-remaining">Time Remaining: <%= @test_attempt.time_remaining&.round || 'Unlimited' %> minutes</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Assessment Instructions -->
      <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-body p-4" style="color: var(--text-primary);">
          <h5 class="mb-3">
            <i class="fas fa-info-circle text-primary me-2"></i>
            Important Instructions
          </h5>
          <ul class="mb-0" style="color: var(--text-secondary);">
            <li>Answer all questions to the best of your ability</li>
            <li>Once you submit your answers, they cannot be changed</li>
            <li>Do not navigate away from this page during the assessment</li>
            <li>Use the "Save Progress" button to save your answers periodically</li>
            <li>Click "Submit Test" only when you are ready to finalize your assessment</li>
          </ul>
        </div>
      </div>

      <!-- Assessment Form -->
      <%= form_with model: @test_attempt, url: tests_test_attempt_path(@test_attempt), method: :patch, local: true, id: "assessment-form" do |form| %>
        <div class="card test-attempt-questions" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-body p-4">
            <% if @test_attempt.test_attempt_questions.any? %>
              <% @test_attempt.test_attempt_questions.each_with_index do |taq, index| %>
              <div class="mb-5 p-4 rounded" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary);">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h6 class="mb-0" style="color: var(--text-primary);">
                    Question <%= index + 1 %> of <%= @test_attempt.test_attempt_questions.count %>
                  </h6>
                </div>
                
                <p class="mb-4" style="color: var(--text-secondary); line-height: 1.6;">
                  <%= taq.question.content %>
                </p>
                
                <div class="form-group">
                  <%= label_tag "test_attempt_questions[#{taq.id}]", "Your Answer:", class: "form-label fw-semibold", style: "color: var(--text-primary);" %>
                  
                  <div class="multiple-choice-options">
                    <% taq.question.multiple_choice_options.each do |option| %>
                      <div class="form-check mb-2">
                        <%= radio_button_tag "test_attempt_questions[#{taq.id}]", option, taq.chosen_answer == option,
                            class: "form-check-input" %>
                        <%= label_tag "test_attempt_questions_#{taq.id}_#{option}", option, 
                            class: "form-check-label", 
                            style: "color: var(--text-primary); cursor: pointer;" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <% end %>
            <% else %>
              <div class="alert alert-warning">
                <strong>No Questions Found!</strong> 
                This test attempt has no questions associated with it. Please contact support.
              </div>
            <% end %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-3 justify-content-center mt-4">
          <%= form.submit "Save Progress", name: "save", class: "btn btn-outline-primary btn-lg px-4" %>
          <button type="button" class="btn btn-primary btn-lg px-4" data-bs-toggle="modal" data-bs-target="#submitConfirmationModal">
            Submit Test
          </button>
        </div>
      <% end %>

      <!-- Abandon Assessment Option -->
      <div class="text-center mt-4">
        <%= link_to "Abandon Assessment", abandon_tests_test_attempt_path(@test_attempt), 
            method: :post,
            class: "btn btn-outline-danger btn-sm",
            data: { confirm: "Are you sure you want to abandon this assessment? This will end your current attempt." } %>
      </div>
    </div>
  </div>
</div>

<script>
  // Auto-submit when time expires
  <% if @test_attempt.test.time_limit.present? %>
    let timeRemaining = <%= @test_attempt.time_remaining&.round || 0 %>;
    
    if (timeRemaining > 0) {
      const timer = setInterval(() => {
        timeRemaining--;
        const timeDisplay = document.getElementById('time-remaining');
        if (timeDisplay) {
          timeDisplay.textContent = `Time Remaining: ${timeRemaining} minutes`;
        }
        
        if (timeRemaining <= 0) {
          clearInterval(timer);
          alert('Time has expired! Your test will be automatically submitted.');
          document.getElementById('assessment-form').submit();
        }
      }, 60000); // Update every minute
    }
  <% end %>

  // Warn before leaving page
  window.addEventListener('beforeunload', function(e) {
    e.preventDefault();
    e.returnValue = 'Are you sure you want to leave? Your progress may be lost.';
  });

  // Remove warning when form is submitted
  document.getElementById('assessment-form').addEventListener('submit', function() {
    window.removeEventListener('beforeunload', arguments.callee);
  });
</script>

<!-- Submit Confirmation Modal -->
<div class="modal fade" id="submitConfirmationModal" tabindex="-1" aria-labelledby="submitConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
      <div class="modal-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
        <h5 class="modal-title" id="submitConfirmationModalLabel" style="color: var(--text-primary);">
          <i class="fas fa-exclamation-triangle text-warning me-2"></i>
          Confirm Test Submission
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
      </div>
      <div class="modal-body" style="color: var(--text-primary);">
        <div class="alert alert-warning mb-3" style="background: rgba(245, 158, 11, 0.1); border: 1px solid rgba(245, 158, 11, 0.3);">
          <i class="fas fa-exclamation-circle me-2"></i>
          <strong>Important:</strong> Once you submit your test, you cannot change your answers.
        </div>
        
        <p class="mb-3">Are you sure you want to submit your test for grading?</p>
        
        <div class="row text-center">
          <div class="col-4">
            <div class="p-2 rounded" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary);">
              <div class="fw-bold" style="color: var(--text-primary);"><%= @test_attempt.test_attempt_questions.count %></div>
              <small style="color: var(--text-secondary);">Questions</small>
            </div>
          </div>
          <div class="col-4">
            <div class="p-2 rounded" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary);">
              <div class="fw-bold" style="color: var(--text-primary);" id="answered-count">0</div>
              <small style="color: var(--text-secondary);">Answered</small>
            </div>
          </div>
          <div class="col-4">
            <div class="p-2 rounded" style="background: var(--bg-tertiary); border: 1px solid var(--border-primary);">
              <div class="fw-bold" style="color: var(--text-primary);" id="remaining-count"><%= @test_attempt.test_attempt_questions.count %></div>
              <small style="color: var(--text-secondary);">Remaining</small>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer" style="background: var(--bg-tertiary); border-top: 1px solid var(--border-primary);">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-2"></i>Cancel
        </button>
        <button type="button" class="btn btn-primary" id="confirmSubmitBtn">
          <i class="fas fa-check me-2"></i>Yes, Submit Test
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Count answered questions
  function updateAnswerCounts() {
    const radioButtons = document.querySelectorAll('input[type="radio"]');
    const answeredCount = document.querySelectorAll('input[type="radio"]:checked').length;
    const totalQuestions = <%= @test_attempt.test_attempt_questions.count %>;
    
    document.getElementById('answered-count').textContent = answeredCount;
    document.getElementById('remaining-count').textContent = totalQuestions - answeredCount;
  }
  
  // Update counts when modal is shown
  document.getElementById('submitConfirmationModal').addEventListener('show.bs.modal', function() {
    updateAnswerCounts();
  });
  
  // Update counts when radio buttons are clicked
  document.querySelectorAll('input[type="radio"]').forEach(function(radio) {
    radio.addEventListener('change', updateAnswerCounts);
  });
  
  // Handle form submission
  document.getElementById('confirmSubmitBtn').addEventListener('click', function() {
    // Create a hidden submit button with the correct name
    const form = document.getElementById('assessment-form');
    const submitBtn = document.createElement('input');
    submitBtn.type = 'hidden';
    submitBtn.name = 'Submit';
    submitBtn.value = 'Submit Test';
    form.appendChild(submitBtn);
    
    // Submit the form
    form.submit();
  });
</script>
