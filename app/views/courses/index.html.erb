<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-5">
  <div>
    <h1 class="display-4 fw-bold text-gradient mb-2">Courses</h1>
    <p class="text-white-50">Explore our comprehensive course offerings</p>
  </div>
  <% if current_user && current_user.has_role?(:admin) %>
    <%= link_to "Add New Course", new_course_path, class: "btn btn-primary" %>
  <% end %>
</div>

<!-- Courses Grid -->
<% if @courses.any? %>
  <div class="row g-4">
    <% @courses.each do |course| %>
      <div class="col-lg-4 col-md-6">
        <div class="card h-100 glass-effect">
          <div class="card-body d-flex flex-column">
            <div class="mb-3">
              <h5 class="card-title text-white fw-bold"><%= course.title %></h5>
              <p class="card-text text-white-50"><%= truncate(course.description, length: 120) %></p>
            </div>
            
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="badge bg-primary fs-6 px-3 py-2">
                  $<%= number_with_precision(course.price, precision: 2) %>
                </span>
                <small class="text-white-50">
                  <%= pluralize(course.lessons.count, 'lesson') %>
                </small>
              </div>
              
              <%= link_to "View Course", course_path(course), 
                  class: "btn btn-primary w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-5">
    <div class="mb-4">
      <svg width="64" height="64" fill="currentColor" class="text-white-50" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
      </svg>
    </div>
    <h3 class="text-white">No Courses Available</h3>
    <p class="text-white-50">Check back soon for new course offerings!</p>
  </div>
<% end %>
