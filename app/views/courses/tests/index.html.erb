<div class="container py-5">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <!-- Header -->
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <div>
          <h1 class="text-gradient h2 mb-2">Course Tests</h1>
          <p class="text-muted mb-0">Available tests for <%= @course.title %></p>
        </div>
        <%= link_to "← Back to Course", @course, class: "btn btn-outline-secondary" %>
      </div>

      <!-- Course Tests Section -->
      <% if @course.tests.any? %>
        <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
            <h5 class="mb-0" style="color: var(--text-primary);">
              <i class="fas fa-clipboard-check me-2"></i>Course Tests
            </h5>
          </div>
          <div class="card-body p-4">
            <div class="row g-3">
              <% @course.tests.each do |test| %>
                <div class="col-lg-6">
                  <div class="card h-100" style="background: var(--bg-primary); border: 1px solid var(--border-secondary);">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-3">
                        <h6 class="card-title mb-0" style="color: var(--text-primary);">
                          <%= test.title %>
                        </h6>
                        <span class="badge <%= case test.assessment_type
                                              when 'final' then 'bg-primary'
                                              when 'chapter' then 'bg-info'
                                              when 'practice' then 'bg-success'
                                              when 'certification' then 'bg-warning'
                                              else 'bg-secondary'
                                            end %>">
                          <%= test.assessment_type.titleize %>
                        </span>
                      </div>
                      <p class="card-text small" style="color: var(--text-secondary);">
                        <%= truncate(test.description, length: 120) %>
                      </p>
                      <div class="mb-3">
                        <small class="text-muted">
                          <% if test.time_limit %>
                            <i class="fas fa-clock me-1"></i><%= test.time_limit_display %>
                          <% end %>
                          <% if test.passing_score %>
                            <i class="fas fa-target ms-2 me-1"></i><%= test.passing_score_display %>
                          <% end %>
                          <% if test.max_attempts %>
                            <i class="fas fa-redo ms-2 me-1"></i><%= pluralize(test.max_attempts, 'attempt') %>
                          <% end %>
                        </small>
                      </div>
                      <div class="d-flex justify-content-between align-items-center">
                        <%= link_to "Start Test", course_test_path(@course, test), 
                            class: "btn btn-primary btn-sm" %>
                        <small class="text-muted">
                          <%= pluralize(test.questions.count, 'question') %>
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Lesson-Specific Tests -->
      <% if @lesson_tests.any? %>
        <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
            <h5 class="mb-0" style="color: var(--text-primary);">
              <i class="fas fa-book me-2"></i>Lesson-Specific Tests
            </h5>
          </div>
          <div class="card-body p-4">
            <div class="row g-3">
              <% @lesson_tests.each do |test| %>
                <div class="col-lg-6">
                  <div class="card h-100" style="background: var(--bg-primary); border: 1px solid var(--border-secondary);">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-3">
                        <h6 class="card-title mb-0" style="color: var(--text-primary);">
                          <%= test.title %>
                        </h6>
                        <span class="badge bg-success">Lesson Test</span>
                      </div>
                      <p class="small text-muted mb-2">
                        <i class="fas fa-book me-1"></i>Lesson: <%= test.lesson.title %>
                      </p>
                      <p class="card-text small" style="color: var(--text-secondary);">
                        <%= truncate(test.description, length: 100) %>
                      </p>
                      <div class="d-flex justify-content-between align-items-center">
                        <%= link_to "Start Test", course_test_path(@course, test), 
                            class: "btn btn-success btn-sm" %>
                        <small class="text-muted">
                          <%= pluralize(test.questions.count, 'question') %>
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- No Tests Message -->
      <% unless @course.tests.any? %>
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-clipboard-list" style="font-size: 4rem; color: var(--text-muted);"></i>
          </div>
          <h4 style="color: var(--text-muted); margin-bottom: 1rem;">No Tests Available</h4>
          <p style="color: var(--text-muted);">Tests for this course will be added soon!</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
