<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient h3 mb-0"><%= @test.title %></h1>
        <%= link_to "â† Back to Tests", course_tests_path(@course), class: "btn btn-outline-secondary" %>
      </div>

      <div class="card" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-body p-4">
          <div class="row g-4">
            <div class="col-md-6">
              <h5 class="text-primary mb-3">Test Details</h5>
              <div class="mb-3">
                <strong>Assessment Type:</strong>
                <span class="text-muted"><%= @test.assessment_type.titleize %></span>
              </div>
              <div class="mb-3">
                <strong>Question Pool Size:</strong>
                <span class="text-muted"><%= @test.question_pool_size %></span>
              </div>
              <div class="mb-3">
                <strong>Passing Score:</strong>
                <span class="text-muted"><%= @test.passing_score %>%</span>
              </div>
              <% if @test.max_attempts.present? %>
                <div class="mb-3">
                  <strong>Max Attempts:</strong>
                  <span class="text-muted"><%= @test.max_attempts %></span>
                </div>
              <% end %>
            </div>
            
            <div class="col-md-6">
              <h5 class="text-primary mb-3">Requirements</h5>
              <div class="mb-3">
                <strong>Honor Statement Required:</strong>
                <span class="text-muted">
                  <% if @test.honor_statement_required? %>
                    <i class="fas fa-check text-success"></i> Yes
                  <% else %>
                    <i class="fas fa-times text-danger"></i> No
                  <% end %>
                </span>
              </div>
              <div class="mb-3">
                <strong>Time Limit:</strong>
                <span class="text-muted">
                  <% if @test.time_limit.present? %>
                    <%= @test.time_limit %> minutes
                  <% else %>
                    No limit
                  <% end %>
                </span>
              </div>
            </div>
          </div>
          
          <hr class="my-4">
          
          <div class="d-flex gap-3 justify-content-center">
            <% if current_user.can_access?(@course) %>
              <%= link_to "Take Test", new_tests_test_attempt_path(test_id: @test.id), class: "btn btn-primary btn-lg" %>
            <% else %>
              <div class="alert alert-warning text-center w-100">
                <i class="fas fa-lock me-2"></i>
                You must be enrolled in this course to take this test.
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>