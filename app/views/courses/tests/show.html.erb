<div class="container py-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Header -->
      <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center mb-4">
        <div>
          <h1 class="text-gradient h2 mb-2"><%= @test.title %></h1>
          <p class="text-muted mb-0">
            <%= @test.test_type.titleize %> Test • <%= @course.title %>
          </p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to "← Back to Tests", course_tests_path(@course), class: "btn btn-outline-secondary" %>
          <%= link_to "← Back to Course", @course, class: "btn btn-outline-secondary" %>
        </div>
      </div>

      <!-- Test Information Card -->
      <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
        <div class="card-body p-4" style="color: var(--text-primary);">
          <h5 class="fw-semibold mb-3" style="color: var(--text-primary);">Test Information</h5>
          <p style="color: var(--text-secondary); margin-bottom: 1.5rem;"><%= @test.description %></p>
          
          <div class="row g-3">
            <div class="col-sm-6">
              <div class="d-flex align-items-center">
                <i class="fas fa-clipboard-check text-primary me-2"></i>
                <span style="color: var(--text-primary);">
                  <strong>Type:</strong> <%= @test.test_type.titleize %>
                </span>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="d-flex align-items-center">
                <i class="fas fa-list text-info me-2"></i>
                <span style="color: var(--text-primary);">
                  <strong>Questions:</strong> <%= pluralize(@test.questions.count, 'question') %>
                </span>
              </div>
            </div>
            <% if @test.time_limit %>
              <div class="col-sm-6">
                <div class="d-flex align-items-center">
                  <i class="fas fa-clock text-warning me-2"></i>
                  <span style="color: var(--text-primary);">
                    <strong>Time Limit:</strong> <%= @test.time_limit_display %>
                  </span>
                </div>
              </div>
            <% end %>
            <% if @test.passing_score %>
              <div class="col-sm-6">
                <div class="d-flex align-items-center">
                  <i class="fas fa-target text-success me-2"></i>
                  <span style="color: var(--text-primary);">
                    <strong>Passing Score:</strong> <%= @test.passing_score_display %>
                  </span>
                </div>
              </div>
            <% end %>
            <% if @test.max_attempts %>
              <div class="col-sm-6">
                <div class="d-flex align-items-center">
                  <i class="fas fa-redo text-info me-2"></i>
                  <span style="color: var(--text-primary);">
                    <strong>Max Attempts:</strong> <%= pluralize(@test.max_attempts, 'attempt') %>
                  </span>
                </div>
              </div>
            <% end %>
            <% if @test.lesson %>
              <div class="col-sm-6">
                <div class="d-flex align-items-center">
                  <i class="fas fa-book text-secondary me-2"></i>
                  <span style="color: var(--text-primary);">
                    <strong>Lesson:</strong> <%= @test.lesson.title %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Instructions -->
      <% if @test.instructions.present? %>
        <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
            <h6 class="mb-0" style="color: var(--text-primary);">
              <i class="fas fa-info-circle me-2"></i>Instructions
            </h6>
          </div>
          <div class="card-body" style="color: var(--text-secondary);">
            <%= simple_format(@test.instructions) %>
          </div>
        </div>
      <% end %>

      <!-- Attempt History -->
      <% if @user_attempts.any? %>
        <div class="card mb-4" style="background: var(--bg-secondary); border: 1px solid var(--border-primary);">
          <div class="card-header" style="background: var(--bg-tertiary); border-bottom: 1px solid var(--border-primary);">
            <h6 class="mb-0" style="color: var(--text-primary);">
              <i class="fas fa-history me-2"></i>Your Attempts (<%= @user_attempt_count %>)
            </h6>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush">
              <% @user_attempts.limit(5).each do |attempt| %>
                <div class="list-group-item" style="background: var(--bg-secondary); border-color: var(--border-primary); color: var(--text-primary);">
                  <div class="d-flex justify-content-between align-items-center">
                    <div>
                      <strong>Attempt #<%= attempt.retake_number || 1 %></strong>
                      <span class="text-muted ms-2">
                        <%= attempt.taken_at&.strftime("%B %d, %Y at %I:%M %p") || attempt.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </span>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                      <% if attempt.submitted? %>
                        <span class="badge <%= attempt.passed? ? 'bg-success' : 'bg-danger' %>">
                          <%= attempt.score %>% <%= attempt.passed? ? 'Passed' : 'Failed' %>
                        </span>
                      <% else %>
                        <span class="badge bg-warning">In Progress</span>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
        <% if @can_retake %>
          <%= link_to "Start Test", new_tests_test_attempt_path(@test), 
              class: "btn btn-primary btn-lg" %>
        <% elsif @test.max_attempts && @user_attempt_count >= @test.max_attempts %>
          <button class="btn btn-secondary btn-lg" disabled>
            <i class="fas fa-ban me-2"></i>Maximum Attempts Reached
          </button>
        <% elsif @user_attempts.any? && @user_attempts.first.submitted? == false %>
          <%= link_to "Continue Test", edit_tests_test_attempt_path(@user_attempts.first), 
              class: "btn btn-warning btn-lg" %>
        <% else %>
          <%= link_to "Start Test", new_tests_test_attempt_path(@test), 
              class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>

      <!-- Retake Information -->
      <% if @test.max_attempts && @user_attempt_count > 0 && @user_attempt_count < @test.max_attempts %>
        <div class="alert alert-info mt-3" style="background: var(--bg-tertiary); border-color: var(--border-primary); color: var(--text-primary);">
          <i class="fas fa-info-circle me-2"></i>
          You have <%= pluralize(@test.max_attempts - @user_attempt_count, 'attempt') %> remaining.
        </div>
      <% end %>
    </div>
  </div>
</div>
