<!-- Hero Section -->
<div class="hero-section text-center position-relative">
  <div class="position-relative z-3">
    <h1 class="display-4 fw-bold text-gradient mb-4">Welcome to Mr Wet Test</h1>
    <p class="lead mb-5" style="color: var(--text-secondary); max-width: 600px; margin-left: auto; margin-right: auto;">
      Your premier destination for comprehensive course testing and assessment. 
      Experience modern learning with our cutting-edge platform.
    </p>
    <div class="d-flex gap-3 justify-content-center flex-wrap">
      <%= link_to "Explore Courses", courses_path, class: "btn btn-primary btn-lg px-5 py-3" %>
      <%= link_to "Take Tests", tests_path, class: "btn btn-outline-primary btn-lg px-5 py-3" %>
    </div>
  </div>
</div>

