<% content_for :title, "#{@course.title} - Sea Pass Pro" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <%= link_to instructor_courses_path, class: "btn btn-outline-secondary me-3" do %>
            <i class="fas fa-arrow-left"></i>
          <% end %>
          <div>
            <h1 class="h3 mb-1 text-primary">
              <i class="fas fa-book me-2"></i>
              <%= @course.title %>
            </h1>
            <p class="text-muted mb-0"><%= @course.description %></p>
          </div>
        </div>
        <div class="d-flex gap-2">
          <%= link_to edit_instructor_course_path(@course), class: "btn btn-outline-primary" do %>
            <i class="fas fa-edit me-1"></i> Edit Course
          <% end %>
          <%= link_to new_instructor_lesson_path(course_id: @course.id), class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i> Add Lesson
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Course Overview Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Course Price
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @course.formatted_price %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Enrollments
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @enrollment_count %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-users fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Lessons
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @lessons.count %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-list-ol fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Course Type
              </div>
              <div class="h6 mb-0 font-weight-bold text-gray-800">
                <%= @course.time_managed? ? 'Time-Managed' : 'Self-Paced' %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-<%= @course.time_managed? ? 'clock' : 'play' %> fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Course Settings -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-cogs me-2"></i>
            Course Settings
          </h6>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6>Course Configuration</h6>
              <ul class="list-unstyled">
                <li>
                  <i class="fas fa-<%= @course.time_managed? ? 'check text-success' : 'times text-muted' %> me-2"></i>
                  Time-Managed Course
                </li>
                <li>
                  <i class="fas fa-<%= @course.chapter_assessments_required? ? 'check text-success' : 'times text-muted' %> me-2"></i>
                  Chapter Assessments Required
                </li>
                <li>
                  <i class="fas fa-<%= @course.free? ? 'gift text-success' : 'dollar-sign text-primary' %> me-2"></i>
                  <%= @course.free? ? 'Free Course' : 'Paid Course' %>
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>Course Statistics</h6>
              <ul class="list-unstyled">
                <li><strong>Created:</strong> <%= @course.created_at.strftime("%B %d, %Y") %></li>
                <li><strong>Last Updated:</strong> <%= @course.updated_at.strftime("%B %d, %Y") %></li>
                <li><strong>Total Enrollments:</strong> <%= @enrollment_count %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="row">
    <!-- Lessons -->
    <div class="col-xl-8 col-lg-7">
      <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Course Lessons</h6>
          <%= link_to new_instructor_lesson_path(course_id: @course.id), class: "btn btn-sm btn-primary" do %>
            <i class="fas fa-plus me-1"></i> Add Lesson
          <% end %>
        </div>
        <div class="card-body">
          <% if @lessons.any? %>
            <div class="list-group list-group-flush">
              <% @lessons.each do |lesson| %>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                  <div class="d-flex align-items-center">
                    <div class="lesson-number me-3">
                      <span class="badge bg-primary rounded-circle">
                        <%= lesson.position %>
                      </span>
                    </div>
                    <div>
                      <h6 class="mb-1"><%= lesson.title %></h6>
                      <p class="mb-1 text-muted">
                        <%= truncate(lesson.content, length: 100) %>
                      </p>
                      <small class="text-muted">
                        Updated <%= lesson.updated_at.strftime("%B %d, %Y") %>
                      </small>
                    </div>
                  </div>
                  <div class="btn-group btn-group-sm">
                    <%= link_to instructor_lesson_path(lesson), class: "btn btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_instructor_lesson_path(lesson), class: "btn btn-outline-secondary" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to instructor_lesson_path(lesson), 
                                method: :delete, 
                                class: "btn btn-outline-danger",
                                data: { 
                                  confirm: "Are you sure you want to delete this lesson?",
                                  turbo_method: :delete 
                                } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-list-ol fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No lessons yet</h5>
              <p class="text-muted">Add lessons to structure your course content.</p>
              <%= link_to new_instructor_lesson_path(course_id: @course.id), class: "btn btn-primary" do %>
                <i class="fas fa-plus me-1"></i> Add Your First Lesson
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Enrollments -->
    <div class="col-xl-4 col-lg-5">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Recent Enrollments</h6>
        </div>
        <div class="card-body">
          <% if @recent_enrollments.any? %>
            <% @recent_enrollments.each do |payment| %>
              <div class="d-flex align-items-center mb-3">
                <div class="avatar-sm bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                  <%= payment.user.email.first.upcase %>
                </div>
                <div class="flex-grow-1">
                  <div class="font-weight-bold"><%= payment.user.email %></div>
                  <small class="text-muted">
                    Enrolled <%= payment.created_at.strftime("%m/%d/%Y") %>
                  </small>
                </div>
                <div class="text-end">
                  <span class="badge bg-success">
                    <%= payment.formatted_amount %>
                  </span>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-users fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No enrollments yet</h5>
              <p class="text-muted">Students haven't enrolled in this course yet.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card shadow">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to new_instructor_lesson_path(course_id: @course.id), class: "btn btn-outline-primary btn-sm" do %>
              <i class="fas fa-plus me-1"></i> Add Lesson
            <% end %>
            <%= link_to instructor_tests_path, class: "btn btn-outline-success btn-sm" do %>
              <i class="fas fa-clipboard-list me-1"></i> Manage Tests
            <% end %>
            <%= link_to instructor_test_attempts_path, class: "btn btn-outline-info btn-sm" do %>
              <i class="fas fa-chart-line me-1"></i> View Progress
            <% end %>
            <%= link_to edit_instructor_course_path(@course), class: "btn btn-outline-warning btn-sm" do %>
              <i class="fas fa-edit me-1"></i> Edit Course
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
  border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
  border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}

.avatar-sm {
  width: 2rem;
  height: 2rem;
  font-size: 0.875rem;
}

.text-gray-800 {
  color: #5a5c69 !important;
}

.text-gray-300 {
  color: #dddfeb !important;
}

.font-weight-bold {
  font-weight: 700 !important;
}

.text-xs {
  font-size: 0.7rem;
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.lesson-number .badge {
  width: 2rem;
  height: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.list-group-item {
  border-left: none;
  border-right: none;
}

.list-group-item:first-child {
  border-top: none;
}

.list-group-item:last-child {
  border-bottom: none;
}
</style>
