<% content_for :title, "Manage Courses - Sea Pass Pro" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-primary">
            <i class="fas fa-book me-2"></i>
            Manage Courses
          </h1>
          <p class="text-muted mb-0">Create and manage your maritime education courses</p>
        </div>
        <%= link_to new_instructor_course_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus me-1"></i> Create New Course
        <% end %>
      </div>
    </div>
  </div>

  <!-- Courses Grid -->
  <% if @courses.any? %>
    <div class="row">
      <% @courses.each do |course| %>
        <div class="col-xl-4 col-lg-6 mb-4">
          <div class="card shadow h-100">
            <% if course.thumbnail.attached? %>
              <%= image_tag course.thumbnail, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="fas fa-book fa-3x text-white"></i>
              </div>
            <% end %>
            
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <%= course.title %>
              </h5>
              <p class="card-text text-muted flex-grow-1">
                <%= truncate(course.description, length: 120) %>
              </p>
              
              <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <span class="badge bg-primary"><%= course.formatted_price %></span>
                  <small class="text-muted">
                    <i class="fas fa-users me-1"></i>
                    <%= course.enrollment_count %> enrolled
                  </small>
                </div>
                
                <div class="d-flex flex-wrap gap-1">
                  <% if course.time_managed? %>
                    <span class="badge bg-info">
                      <i class="fas fa-clock me-1"></i>
                      Time-Managed
                    </span>
                  <% end %>
                  
                  <% if course.chapter_assessments_required? %>
                    <span class="badge bg-warning">
                      <i class="fas fa-clipboard-check me-1"></i>
                      Chapter Assessments
                    </span>
                  <% end %>
                  
                  <% if course.free? %>
                    <span class="badge bg-success">
                      <i class="fas fa-gift me-1"></i>
                      Free
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="card-footer bg-transparent">
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  Created <%= course.created_at.strftime("%B %d, %Y") %>
                </small>
                <div class="btn-group btn-group-sm">
                  <%= link_to instructor_course_path(course), class: "btn btn-outline-primary" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_instructor_course_path(course), class: "btn btn-outline-secondary" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to instructor_course_path(course), 
                              method: :delete, 
                              class: "btn btn-outline-danger",
                              data: { 
                                confirm: "Are you sure you want to delete this course?",
                                turbo_method: :delete 
                              } do %>
                    <i class="fas fa-trash"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-5">
      <div class="mb-4">
        <i class="fas fa-book fa-5x text-muted"></i>
      </div>
      <h3 class="text-muted mb-3">No courses yet</h3>
      <p class="text-muted mb-4">
        Create your first maritime education course to get started with Sea Pass Pro.
      </p>
      <%= link_to new_instructor_course_path, class: "btn btn-primary btn-lg" do %>
        <i class="fas fa-plus me-2"></i> Create Your First Course
      <% end %>
    </div>
  <% end %>
</div>

<style>
.card {
  transition: transform 0.2s ease-in-out;
}

.card:hover {
  transform: translateY(-2px);
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}
</style>
