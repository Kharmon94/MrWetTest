<% content_for :title, "Instructor Dashboard - Sea Pass Pro" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-primary">
            <i class="fas fa-chalkboard-teacher me-2"></i>
            Instructor Dashboard
          </h1>
          <p class="text-muted mb-0">Welcome back, <%= @instructor.email %></p>
        </div>
        <div class="d-flex gap-2">
          <%= link_to new_instructor_course_path, class: "btn btn-primary" do %>
            <i class="fas fa-plus me-1"></i> New Course
          <% end %>
          <%= link_to new_instructor_test_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-plus me-1"></i> New Test
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Total Courses
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_courses %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-book fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Total Tests
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_tests %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Total Students
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_students %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-users fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Recent Completions
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @recent_attempts.count %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-trophy fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="row">
    <!-- Recent Test Attempts -->
    <div class="col-xl-8 col-lg-7">
      <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Recent Test Completions</h6>
          <%= link_to instructor_test_attempts_path, class: "btn btn-sm btn-primary" do %>
            View All
          <% end %>
        </div>
        <div class="card-body">
          <% if @recent_attempts.any? %>
            <div class="table-responsive">
              <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Student</th>
                    <th>Test</th>
                    <th>Score</th>
                    <th>Completed</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @recent_attempts.each do |attempt| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                            <%= attempt.user.email.first.upcase %>
                          </div>
                          <div>
                            <div class="font-weight-bold"><%= attempt.user.email %></div>
                          </div>
                        </div>
                      </td>
                      <td>
                        <div class="font-weight-bold"><%= attempt.test.title %></div>
                        <small class="text-muted"><%= attempt.test.assessment_type.humanize %></small>
                      </td>
                      <td>
                        <span class="badge <%= attempt.passed? ? 'bg-success' : 'bg-danger' %>">
                          <%= attempt.score %>% 
                          <% if attempt.passed? %>
                            <i class="fas fa-check ms-1"></i>
                          <% else %>
                            <i class="fas fa-times ms-1"></i>
                          <% end %>
                        </span>
                      </td>
                      <td>
                        <small class="text-muted">
                          <%= attempt.taken_at.strftime("%m/%d/%Y at %I:%M %p") %>
                        </small>
                      </td>
                      <td>
                        <% if attempt.honor_statement_accepted? %>
                          <span class="badge bg-info">
                            <i class="fas fa-shield-alt me-1"></i>
                            Honor Accepted
                          </span>
                        <% else %>
                          <span class="badge bg-secondary">No Honor Required</span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No test completions yet</h5>
              <p class="text-muted">Students haven't completed any tests recently.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Course Overview -->
    <div class="col-xl-4 col-lg-5">
      <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Course Overview</h6>
          <%= link_to instructor_courses_path, class: "btn btn-sm btn-primary" do %>
            Manage
          <% end %>
        </div>
        <div class="card-body">
          <% if @courses.any? %>
            <% @courses.limit(5).each do |course| %>
              <div class="d-flex align-items-center justify-content-between mb-3">
                <div class="flex-grow-1">
                  <div class="font-weight-bold text-dark"><%= course.title %></div>
                  <small class="text-muted">
                    <%= course.formatted_price %> â€¢ 
                    <%= @course_enrollments[course.id] || 0 %> enrolled
                  </small>
                </div>
                <div class="ms-3">
                  <% if course.time_managed? %>
                    <span class="badge bg-info">
                      <i class="fas fa-clock me-1"></i>
                      Time-Managed
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-book fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No courses yet</h5>
              <p class="text-muted">Create your first course to get started.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card shadow">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to new_instructor_course_path, class: "btn btn-outline-primary btn-sm" do %>
              <i class="fas fa-plus me-1"></i> Create New Course
            <% end %>
            <%= link_to new_instructor_test_path, class: "btn btn-outline-success btn-sm" do %>
              <i class="fas fa-plus me-1"></i> Create New Test
            <% end %>
            <%= link_to instructor_test_attempts_path, class: "btn btn-outline-info btn-sm" do %>
              <i class="fas fa-chart-line me-1"></i> View Student Progress
            <% end %>
            <%= link_to instructor_questions_path, class: "btn btn-outline-warning btn-sm" do %>
              <i class="fas fa-question-circle me-1"></i> Manage Questions
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
  border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
  border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}

.avatar-sm {
  width: 2rem;
  height: 2rem;
  font-size: 0.875rem;
}

.text-gray-800 {
  color: #5a5c69 !important;
}

.text-gray-300 {
  color: #dddfeb !important;
}

.font-weight-bold {
  font-weight: 700 !important;
}

.text-xs {
  font-size: 0.7rem;
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}
</style>
