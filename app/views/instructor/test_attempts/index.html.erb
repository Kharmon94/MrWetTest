<% content_for :title, "Student Progress - Sea Pass Pro" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-1 text-primary">
            <i class="fas fa-chart-line me-2"></i>
            Student Progress
          </h1>
          <p class="text-muted mb-0">Monitor student test completions and performance</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Total Attempts
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @total_attempts %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Average Score
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @average_score %>%</div>
            </div>
            <div class="col-auto">
              <i class="fas fa-percentage fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Pass Rate
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @pass_rate %>%</div>
            </div>
            <div class="col-auto">
              <i class="fas fa-trophy fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Current Page
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @test_attempts.current_page %> / <%= @test_attempts.total_pages %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-list fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">
        <i class="fas fa-filter me-2"></i>
        Filter Results
      </h6>
    </div>
    <div class="card-body">
      <%= form_with url: instructor_test_attempts_path, method: :get, local: true, class: "row g-3" do |form| %>
        <div class="col-md-3">
          <%= form.label :test_id, "Test", class: "form-label" %>
          <%= form.select :test_id, 
              options_from_collection_for_select(@tests, :id, :title, @selected_test_id),
              { prompt: "All Tests" },
              { class: "form-select" } %>
        </div>
        <div class="col-md-2">
          <%= form.label :date_from, "From Date", class: "form-label" %>
          <%= form.date_field :date_from, value: @date_from, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= form.label :date_to, "To Date", class: "form-label" %>
          <%= form.date_field :date_to, value: @date_to, class: "form-control" %>
        </div>
        <div class="col-md-2">
          <%= form.label :min_score, "Min Score", class: "form-label" %>
          <%= form.number_field :min_score, value: @min_score, min: 0, max: 100, class: "form-control", placeholder: "0" %>
        </div>
        <div class="col-md-2">
          <%= form.label :max_score, "Max Score", class: "form-label" %>
          <%= form.number_field :max_score, value: @max_score, min: 0, max: 100, class: "form-control", placeholder: "100" %>
        </div>
        <div class="col-md-1 d-flex align-items-end">
          <%= form.submit "Filter", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Test Attempts Table -->
  <div class="card shadow">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
      <h6 class="m-0 font-weight-bold text-primary">Test Attempts</h6>
      <small class="text-muted">
        Showing <%= @test_attempts.offset + 1 %>-<%= [@test_attempts.offset + @test_attempts.count, @test_attempts.total_count].min %> 
        of <%= @test_attempts.total_count %> results
      </small>
    </div>
    <div class="card-body">
      <% if @test_attempts.any? %>
        <div class="table-responsive">
          <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Student</th>
                <th>Test</th>
                <th>Score</th>
                <th>Status</th>
                <th>Completed</th>
                <th>Attempt #</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @test_attempts.each do |attempt| %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                        <%= attempt.user.email.first.upcase %>
                      </div>
                      <div>
                        <div class="font-weight-bold"><%= attempt.user.email %></div>
                        <small class="text-muted">
                          ID: <%= attempt.user.id %>
                        </small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="font-weight-bold"><%= attempt.test.title %></div>
                    <small class="text-muted">
                      <%= attempt.test.assessment_type.humanize %>
                    </small>
                  </td>
                  <td>
                    <span class="badge <%= attempt.passed? ? 'bg-success' : 'bg-danger' %> fs-6">
                      <%= attempt.score %>% 
                      <% if attempt.passed? %>
                        <i class="fas fa-check ms-1"></i>
                      <% else %>
                        <i class="fas fa-times ms-1"></i>
                      <% end %>
                    </span>
                  </td>
                  <td>
                    <div class="d-flex flex-column gap-1">
                      <% if attempt.honor_statement_accepted? %>
                        <span class="badge bg-info">
                          <i class="fas fa-shield-alt me-1"></i>
                          Honor Accepted
                        </span>
                      <% else %>
                        <span class="badge bg-secondary">No Honor Required</span>
                      <% end %>
                      
                      <% if attempt.test.time_limit.present? %>
                        <span class="badge bg-warning">
                          <i class="fas fa-clock me-1"></i>
                          Timed
                        </span>
                      <% end %>
                    </div>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= attempt.taken_at.strftime("%m/%d/%Y") %><br>
                      <%= attempt.taken_at.strftime("%I:%M %p") %>
                    </small>
                  </td>
                  <td>
                    <span class="badge bg-light text-dark">
                      #<%= attempt.retake_number %>
                    </span>
                  </td>
                  <td>
                    <%= link_to instructor_test_attempt_path(attempt), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-eye"></i> View Details
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @test_attempts.total_pages > 1 %>
          <div class="d-flex justify-content-center mt-4">
            <%= paginate @test_attempts, theme: 'bootstrap5' %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
          <h5 class="text-muted">No test attempts found</h5>
          <p class="text-muted">
            <% if params[:test_id].present? || params[:date_from].present? || params[:date_to].present? %>
              Try adjusting your filters to see more results.
            <% else %>
              Students haven't completed any tests yet.
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
  border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
  border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}

.avatar-sm {
  width: 2rem;
  height: 2rem;
  font-size: 0.875rem;
}

.text-gray-800 {
  color: #5a5c69 !important;
}

.text-gray-300 {
  color: #dddfeb !important;
}

.font-weight-bold {
  font-weight: 700 !important;
}

.text-xs {
  font-size: 0.7rem;
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.table th {
  background-color: #f8f9fc;
  border-color: #e3e6f0;
  color: #5a5c69;
  font-weight: 600;
}

.table td {
  border-color: #e3e6f0;
  vertical-align: middle;
}

.fs-6 {
  font-size: 1rem !important;
}
</style>
