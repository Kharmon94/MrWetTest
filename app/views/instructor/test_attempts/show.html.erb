<% content_for :title, "Test Attempt Details - Sea Pass Pro" %>

<div class="container-fluid py-4">
  <!-- Header -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <%= link_to instructor_test_attempts_path, class: "btn btn-outline-secondary me-3" do %>
            <i class="fas fa-arrow-left"></i>
          <% end %>
          <div>
            <h1 class="h3 mb-1 text-primary">
              <i class="fas fa-clipboard-check me-2"></i>
              Test Attempt Details
            </h1>
            <p class="text-muted mb-0">
              <%= @test_attempt.user.email %> - <%= @test_attempt.test.title %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Attempt Summary Cards -->
  <div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Score
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @test_attempt.score %>%</div>
            </div>
            <div class="col-auto">
              <i class="fas fa-percentage fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-<%= @test_attempt.passed? ? 'success' : 'danger' %> shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-<%= @test_attempt.passed? ? 'success' : 'danger' %> text-uppercase mb-1">
                Status
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @test_attempt.passed? ? 'PASSED' : 'FAILED' %>
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-<%= @test_attempt.passed? ? 'check-circle' : 'times-circle' %> fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                Attempt #
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800"><%= @test_attempt.retake_number %></div>
            </div>
            <div class="col-auto">
              <i class="fas fa-redo fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Duration
              </div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                <%= @test_attempt.duration_in_minutes %>m
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-clock fa-2x text-gray-300"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Attempt Details -->
  <div class="row">
    <div class="col-lg-8">
      <!-- Questions and Answers -->
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-question-circle me-2"></i>
            Questions & Answers
          </h6>
        </div>
        <div class="card-body">
          <% if @questions.any? %>
            <% @questions.each_with_index do |taq, index| %>
              <div class="question-item mb-4 p-3 border rounded <%= taq.correct? ? 'border-success bg-light-success' : 'border-danger bg-light-danger' %>">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h6 class="mb-0">
                    Question <%= index + 1 %>
                    <% if taq.correct? %>
                      <span class="badge bg-success ms-2">
                        <i class="fas fa-check me-1"></i>Correct
                      </span>
                    <% else %>
                      <span class="badge bg-danger ms-2">
                        <i class="fas fa-times me-1"></i>Incorrect
                      </span>
                    <% end %>
                  </h6>
                </div>
                
                <div class="question-content mb-3">
                  <strong>Question:</strong>
                  <p class="mt-1 mb-0"><%= taq.question.content %></p>
                </div>
                
                <div class="row">
                  <div class="col-md-6">
                    <div class="student-answer">
                      <strong class="text-<%= taq.correct? ? 'success' : 'danger' %>">Student Answer:</strong>
                      <p class="mt-1 mb-0 <%= taq.correct? ? 'text-success' : 'text-danger' %>">
                        <%= taq.chosen_answer || "No answer provided" %>
                      </p>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="correct-answer">
                      <strong class="text-success">Correct Answer:</strong>
                      <p class="mt-1 mb-0 text-success"><%= taq.question.correct_answer %></p>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">No questions found</h5>
              <p class="text-muted">This test attempt doesn't have any questions recorded.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Attempt Information -->
    <div class="col-lg-4">
      <!-- Student Information -->
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-user me-2"></i>
            Student Information
          </h6>
        </div>
        <div class="card-body">
          <div class="text-center mb-3">
            <div class="avatar-lg bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2">
              <%= @test_attempt.user.email.first.upcase %>
            </div>
            <h6 class="mb-1"><%= @test_attempt.user.email %></h6>
            <small class="text-muted">Student ID: <%= @test_attempt.user.id %></small>
          </div>
          
          <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between">
              <span>Email:</span>
              <small><%= @test_attempt.user.email %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Member Since:</span>
              <small><%= @test_attempt.user.created_at.strftime("%m/%d/%Y") %></small>
            </div>
          </div>
        </div>
      </div>

      <!-- Test Information -->
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-clipboard-list me-2"></i>
            Test Information
          </h6>
        </div>
        <div class="card-body">
          <h6 class="mb-3"><%= @test_attempt.test.title %></h6>
          
          <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between">
              <span>Type:</span>
              <span class="badge bg-info"><%= @test_attempt.test.assessment_type.humanize %></span>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Passing Score:</span>
              <small><%= @test_attempt.test.passing_score || 'Not set' %>%</small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Time Limit:</span>
              <small><%= @test_attempt.test.time_limit || 'No limit' %> min</small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Max Attempts:</span>
              <small><%= @test_attempt.test.max_attempts || 'Unlimited' %></small>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Honor Statement:</span>
              <small class="<%= @test_attempt.honor_statement_accepted? ? 'text-success' : 'text-muted' %>">
                <%= @test_attempt.honor_statement_accepted? ? 'Accepted' : 'Not Required' %>
              </small>
            </div>
          </div>
        </div>
      </div>

      <!-- Attempt Timeline -->
      <div class="card shadow">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-clock me-2"></i>
            Attempt Timeline
          </h6>
        </div>
        <div class="card-body">
          <div class="timeline">
            <div class="timeline-item">
              <div class="timeline-marker bg-primary"></div>
              <div class="timeline-content">
                <h6 class="mb-1">Test Started</h6>
                <small class="text-muted">
                  <%= @test_attempt.start_time&.strftime("%m/%d/%Y at %I:%M %p") || 'Not recorded' %>
                </small>
              </div>
            </div>
            
            <div class="timeline-item">
              <div class="timeline-marker bg-success"></div>
              <div class="timeline-content">
                <h6 class="mb-1">Test Completed</h6>
                <small class="text-muted">
                  <%= @test_attempt.taken_at.strftime("%m/%d/%Y at %I:%M %p") %>
                </small>
              </div>
            </div>
            
            <% if @test_attempt.end_time %>
              <div class="timeline-item">
                <div class="timeline-marker bg-info"></div>
                <div class="timeline-content">
                  <h6 class="mb-1">End Time</h6>
                  <small class="text-muted">
                    <%= @test_attempt.end_time.strftime("%m/%d/%Y at %I:%M %p") %>
                  </small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.border-left-primary {
  border-left: 0.25rem solid #4e73df !important;
}
.border-left-success {
  border-left: 0.25rem solid #1cc88a !important;
}
.border-left-info {
  border-left: 0.25rem solid #36b9cc !important;
}
.border-left-warning {
  border-left: 0.25rem solid #f6c23e !important;
}
.border-left-danger {
  border-left: 0.25rem solid #e74a3b !important;
}

.avatar-lg {
  width: 4rem;
  height: 4rem;
  font-size: 1.5rem;
}

.text-gray-800 {
  color: #5a5c69 !important;
}

.text-gray-300 {
  color: #dddfeb !important;
}

.font-weight-bold {
  font-weight: 700 !important;
}

.text-xs {
  font-size: 0.7rem;
}

.shadow {
  box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
}

.bg-light-success {
  background-color: rgba(28, 200, 138, 0.1) !important;
}

.bg-light-danger {
  background-color: rgba(231, 74, 59, 0.1) !important;
}

.question-item {
  transition: all 0.2s ease-in-out;
}

.question-item:hover {
  transform: translateY(-1px);
  box-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.1);
}

.timeline {
  position: relative;
  padding-left: 2rem;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 0.75rem;
  top: 0;
  bottom: 0;
  width: 2px;
  background: #e3e6f0;
}

.timeline-item {
  position: relative;
  margin-bottom: 1.5rem;
}

.timeline-marker {
  position: absolute;
  left: -2rem;
  top: 0.25rem;
  width: 0.75rem;
  height: 0.75rem;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 0 0 2px #e3e6f0;
}

.timeline-content {
  margin-left: 1rem;
}

.list-group-item {
  border-left: none;
  border-right: none;
  padding: 0.75rem 0;
}

.list-group-item:first-child {
  border-top: none;
  padding-top: 0;
}

.list-group-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
</style>
